<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/demoSpatialSound"
        android:name="io.agora.nathan.spatialsound.fragments.DemoSpatialSound"
        android:label="Local Spatial Sound"
        tools:layout="@layout/fragment_spatial_sound" />
    <fragment
        android:id="@+id/homeFragment"
        android:name="io.agora.nathan.spatialsound.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_demoSpatialSound"
            app:destination="@id/demoSpatialSound" />
        <action
            android:id="@+id/action_homeFragment_to_remoteSpatialSound"
            app:destination="@id/remoteSpatialSound" />
    </fragment>
    <fragment
        android:id="@+id/remoteSpatialSound"
        android:name="io.agora.nathan.spatialsound.fragments.RemoteSpatialSound"
        android:label="Remote Spatial Sound"
        tools:layout="@layout/fragment_remote_spatial_sound" />
</navigation>